{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "pretty": true,
      "strict": false,
      "baseUrl": "./",
      "noUnusedLocals": true,
      //"types": ["mocha", "node"]
  },
  "include": [
      "**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "test",
      "__test__"
  ]
}